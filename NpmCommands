// updates your npm to the latest version
npm install npm -g

// To set up your project with npm
npm init
npm init --scope=xloeza

//To check you current npm user 
npm whoami
//If you need to grant privileges
sudo npm whoami

//To create you npm user
npm adduser

//To install an npm module
npm install <modulename>
//To install an npm module and save it in the package.json
npm install @linclark/pkg --save

//To check what module dependencies are installed
npm ls

//To publish your project as an npm package
npm publish

//In order to view your package content
npm view @xloeza/howtonpm

